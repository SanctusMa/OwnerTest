<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bb000000">

    <ImageView
        android:id="@+id/startClose"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:padding="15dp"
        android:src="@drawable/active_close" />

    <king.chengwu.com.chengwuapp.activity_national_day.FormLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@null"
        app:base_on_width="true"
        app:w_h_ratio="0.94">

        <ImageView
            android:id="@+id/gameBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/r_bg_two"
            app:relative_height="0.862"
            app:relative_left="0"
            app:relative_top="0.075"
            app:relative_width="1" />

        <ImageView
            android:id="@+id/gameStart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:scaleType="fitCenter"
            android:scaleY="1.018"
            android:src="@drawable/r_start"
            android:visibility="gone"
            app:relative_height="0.2"
            app:relative_left="0.34"
            app:relative_top="0.58"
            app:relative_width="0.4" />

        <TextView
            android:id="@+id/gameCountDown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/r_countdown_bg"
            android:gravity="center"
            android:text="距离下一场红包雨还有\n28 时 50 分 30 秒"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:relative_height="0.25"
            app:relative_left="0.138"
            app:relative_top="0.47"
            app:relative_width="0.75" />
    </king.chengwu.com.chengwuapp.activity_national_day.FormLayout>

    <king.chengwu.com.chengwuapp.activity_national_day.FormLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="@null"
        app:base_on_width="true"
        app:w_h_ratio="0.8">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/r_t_bg"
            app:relative_height="0.1275"
            app:relative_left="0.22"
            app:relative_top="0.12"
            app:relative_width="0.55" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/r_t_bg1"
            app:relative_height="0.4"
            app:relative_left="0.12"
            app:relative_top="0.25"
            app:relative_width="0.8" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:orientation="horizontal"
            android:src="@drawable/r_mid_bg"
            app:relative_height="0.125"
            app:relative_left="0"
            app:relative_top="0.67"
            app:relative_width="1" />
    </king.chengwu.com.chengwuapp.activity_national_day.FormLayout>

    <ImageView
        android:id="@+id/gameRules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="55dp"
        android:background="@null"
        android:padding="10dp"
        android:src="@drawable/r_rules" />

    <ImageView
        android:id="@+id/gameRewards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="55dp"
        android:background="@null"
        android:padding="10dp"
        android:src="@drawable/r_rewards" />
</FrameLayout>